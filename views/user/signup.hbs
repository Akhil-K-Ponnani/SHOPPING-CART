<section>
      <div class="container p-3">
<div class="row">
   <div class="col-md-6 m-auto">
         <h3 class="text-center">Create new account</h3>
         <form action="/signup" method="POST" id="signup" onchange="loginErr()">
            <div class="form-group mt-2">
               <label>Name</label>
               <input type="text" class="form-control" name="name" placeholder="Enter Name">
            </div>
            <div class="form-group">
               <label>Email</label>
               <input type="email" class="form-control" name="email" placeholder="Enter Email">
            </div>
            <div class="form-group">
               <label>Password</label>
               <input type="password" class="form-control" name="password" placeholder="Enter Password">
               {{#if loginErr}}
               <small class="text-danger" id="loginErr">{{loginErr}}</small>
               {{/if}}
            </div>
            <a href="/login">Already have account ?</a>
            <button type="submit" class="btn btn-primary float-right">SignUp</button>
         </form>
      </div>
   </div>
</div>
</section>





<script>
function loginErr()
{
   document.getElementById('loginErr').style.visibility = 'hidden'
}
</script>