<section>
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            {{#if categoryCount}}
            <h5 class="mb-3">Showing {{categoryCount}} Categories</h5>
            <div class="table-responsive">
               <table class="table text-center">
                  <thead>
                     <tr>
                        <th scope="col" class="align-middle">No</th>
                        <th scope="col" class="align-middle">Name</th>
                        <th scope="col" class="align-middle">Display Name</th>
                        <th scope="col" class="align-middle">Image</th>
                     </tr>
                  </thead>
                  <tbody>
                     {{#each categories}}
                     <tr>
                        <th scope="row" class="align-middle">{{this.slno}}</th>
                        <td class="align-middle">{{this.name}}</td>
                        <td class="align-middle">{{this.displayName}}</td>
                        <td class="align-middle"><img style="width:70px; height:70px;" src="/category-images/{{this._id}}.jpg" alt="{{this.name}}"></td>
                        <td class="align-middle"><a href="/admin/edit-category/{{this._id}}" class="btn btn-primary"><i class="fal fa-pen"></i></a></td>
                        <td class="align-middle"><a href="" class="btn btn-danger" data-toggle="modal" data-target="#delete{{this._id}}"><i class="fal fa-trash-alt"></i></a></td>
                        <div class="modal fade" id="delete{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                           <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                 <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Delete?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                 </div>
                                 <div class="modal-body">
                                    Do you want to delete {{this.name}} ?<br>
                                    it also removes products in {{this.name}}
                                 </div>
                                 <div class="modal-footer">
                                    <a href="" class="btn btn-secondary" data-dismiss="modal">Close</a>
                                    <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger">Delete</a>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </tr>
                     {{/each}}
                  </tbody>
               </table>
            </div>
            {{else}}
            <h5 class="text-center">No Categories Found</h5>
            {{/if}}
         </div>
      </div>
   </div>
</section>