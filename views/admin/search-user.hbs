<section>
   <div class="container-fluid mt-5">
      <div class="row">
         <div class="col-md-12">
            {{#if userCount}}
            <h5 class="mb-3">Showing {{userCount}} Users</h5>
            <div class="table-responsive">
               <table class="table text-center">
                  <thead>
                     <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                     </tr>
                  </thead>
                  <tbody>
                     {{#each users}}
                     <tr>
                        <th scope="row" id="slno">{{this.slno}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.status}}</td>
                        <td><a href="/admin/view-user/{{this._id}}" class="btn btn-primary"><i class="fas fa-info-circle"></i></a></td>
                     </tr>
                     {{/each}}
                  </tbody>
               </table>
            </div>
            {{else}}
            <h5 class="text-center">No Users Found</h5>
            {{/if}}
         </div>
      </div>
   </div>
</section>