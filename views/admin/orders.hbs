<section>
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <div class="table-responsive">
               <table class="table text-center">
                  <thead>
                     <tr>
                        <th scope="col" class="align-middle">No</th>
                        <th scope="col" class="align-middle">Date</th>
                        <th scope="col" class="align-middle">Name</th>
                        <th scope="col" class="align-middle">Mobile</th>
                        <th scope="col" class="align-middle">Address</th>
                        <th scope="col" class="align-middle">Pincode</th>
                        <th scope="col" class="align-middle">Amount</th>
                        <th scope="col" class="align-middle">Payment</th>
                        <th scope="col" class="align-middle">Status</th>
                     </tr>
                  </thead>
                  <tbody>
                     {{#each orders}}
                     <tr>
                        <th scope="row" class="align-middle">{{this.slno}}</th>
                        <td class="align-middle">{{this.currentStatusDate}}</td>
                        <td class="align-middle">{{this.deliveryDetails.name}}</td>
                        <td class="align-middle"><a href="tel:{{this.deliveryDetails.mobile}}" style="text-decoration:none;color:black;">{{this.deliveryDetails.mobile}}</a></td>
                        <td class="align-middle">{{this.deliveryDetails.address}}</td>
                        <td class="align-middle">{{this.deliveryDetails.pincode}}</td>
                        <td class="align-middle">{{this.totalAmount}}</td>
                        <td class="align-middle">{{this.paymentMethod}}</td>
                        {{#if this.Delivered}}
                        <td class="align-middle text-success">{{this.currentStatus}}</td>
                        {{else if this.Cancelled}}
                        <td class="align-middle text-danger">{{this.currentStatus}}</td>
                        {{else}}
                        <td class="align-middle">{{this.currentStatus}}</td>
                        {{/if}}
                        <td class="align-middle"><a href="/admin/view-user/{{this.user}}" class="btn btn-primary"><i class="fas fa-user"></i></a></td>
                        <td class="align-middle"><a href="/admin/view-order/{{this._id}}" class="btn btn-primary"><i class="fas fa-info-circle"></i></a></td>
                     </tr>
                     {{/each}}
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
</section>