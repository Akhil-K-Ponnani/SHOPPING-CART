<section>
   <div class="container-fluid mt-5">
      <div class="row">
         <div class="col-md-12">
            {{#if orderCount}}
            <h5 class="mb-3">Showing {{orderCount}} Orders</h5>
            <div class="table-responsive">
               <table class="table text-center">
                  <thead>
                     <tr>
                        <th scope="col" class="align-middle">No</th>
                        <th scope="col" class="align-middle">Date</th>
                        <th scope="col" class="align-middle">Name</th>
                        <th scope="col" class="align-middle">Mobile</th>
                        <th scope="col" class="align-middle">Address</th>
                        <th scope="col" class="align-middle">Pincode</th>
                        <th scope="col" class="align-middle">Amount</th>
                        <th scope="col" class="align-middle">Payment</th>
                        <th scope="col" class="align-middle">Status</th>
                     </tr>
                  </thead>
                  <tbody>
                     {{#each orders}}
                     <tr>
                        <th scope="row" class="align-middle">{{this.slno}}</th>
                        <td class="align-middle">{{this.date}}</td>
                        <td class="align-middle">{{this.deliveryDetails.name}}</td>
                        <td class="align-middle">{{this.deliveryDetails.mobile}}</td>
                        <td class="align-middle">{{this.deliveryDetails.address}}</td>
                        <td class="align-middle">{{this.deliveryDetails.pincode}}</td>
                        <td class="align-middle">{{this.totalAmount}}</td>
                        <td class="align-middle">{{this.paymentMethod}}</td>
                        <td class="align-middle">{{this.status}}</td>
                        <td class="align-middle"><a href="/admin/view-user/{{this._id}}" class="btn btn-primary"><i class="fas fa-user"></i></a></td>
                        <td class="align-middle"><a href="/admin/view-order/{{this._id}}" class="btn btn-primary" onclick="return confirm('Are you want to delete {{this.name}} ?')"><i class="fas fa-info-circle"></i></a></td>
                     </tr>
                     {{/each}}
                  </tbody>
               </table>
            </div>
            {{else}}
            <h5 class="text-center">No Orders Found</h5>
            {{/if}}
         </div>
      </div>
   </div>
</section>